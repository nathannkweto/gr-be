{
  "family": "gf-be",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::843237893084:role/gr-admin",
  "taskRoleArn": "arn:aws:iam::843237893084:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "gf-be",
      "image": "843237893084.dkr.ecr.us-east-1.amazonaws.com/gr-be:v0.1.0",
      "portMappings": [{ "containerPort": 8000, "protocol": "tcp" }],
      "essential": true,
      "environment": [
        { "name": "FLASK_ENV", "value": "production" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/gf-be",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
